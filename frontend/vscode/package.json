{
  "name": "beyond-the-panuozzo",
  "displayName": "Beyond the Panuozzo",
  "description": "Beyond the Panuozzo VSCode extension",
  "version": "0.0.1",
  "publisher": "eszlamczyk",
  "private": true,
  "engines": {
    "vscode": "^1.85.0"
  },
  "extensionKind": [
    "ui"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "btp-sidebar",
          "title": "Beyond the Panuozzo",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "btp-sidebar": [
        {
          "id": "btp-explorer",
          "name": "Orders",
          "when": "btp.signedIn"
        },
        {
          "id": "btp-account",
          "name": "Account"
        }
      ]
    },
    "commands": [
      {
        "command": "btp.signIn",
        "title": "Sign in with Google",
        "category": "Beyond the Panuozzo"
      },
      {
        "command": "btp.signOut",
        "title": "Sign Out",
        "category": "Beyond the Panuozzo"
      },
      {
        "command": "btp.addWishlistItem",
        "title": "Add Item to Wishlist",
        "category": "Beyond the Panuozzo",
        "icon": "$(add)"
      },
      {
        "command": "btp.removeWishlistItem",
        "title": "Remove from Wishlist",
        "category": "Beyond the Panuozzo",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "btp.addWishlistItem",
          "when": "view == btp-explorer && btp.hasDraftOrder",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "btp.removeWishlistItem",
          "when": "view == btp-explorer && viewItem == wishlistItem && btp.hasDraftOrder",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Beyond the Panuozzo"
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ --fix",
    "lint:check": "eslint src/ --max-warnings=0",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "echo \"No tests configured yet\" && exit 0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.55.0"
  }
}
